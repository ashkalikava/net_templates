{% if params %}
aaa group server tacacs+ {{ params.name }}
{%   for server in params.servers %}
 server name {{ server.name }}
{%   endfor %}
{%   if params.vrf %}
 ip vrf forwarding {{ params.vrf }}
{%   endif %}
{%   if params.src_interface %}
 ip tacacs source-interface {{ params.src_interface }}
{%   endif %}
{% endif %}